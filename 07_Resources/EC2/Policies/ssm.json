{
	"EC2ElasticIPPolicy": {
		"Type" : "AWS::IAM::Policy",
		"Properties" : {
			"PolicyName": "Elastic_IP",
			"Roles" : [
				{ "Ref": "EC2Role" }
			],
			"PolicyDocument" : {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": [
							"ssm:UpdateInstanceInformation",
							"ssm:ListInstanceAssociations"
						],
						"Resource": { "Fn::Sub": "arn:aws:ec2:${AWS::Region}:${AWS::AccountId}:instance/*" }
					}
				]
			}
		}
	}
}

