{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "A t2.nano EC2 instance with auto shutdown used for maintenance work.",
	"Metadata": {
		"AWS::CloudFormation::Interface": {
			"ParameterGroups": [
				{
					"Label": {
						"default": "Access"
					},
					"Parameters": [
						"KeyNameParam"
					]
				},
				{
					"Label": {
						"default": "VPC"
					},
					"Parameters": [
						"VPCParam",
						"VPCSubnetsParam"
					]
				}
			],
			"ParameterLabels": {
				"KeyNameParam": {
					"default": "EC2 Private Key"
				},
				"VPCParam": {
					"default": "VPC ID"
				},
				"VPCSubnetsParam": {
					"default": "VPC Public Subnet"
				}
			}
		}
	},
	"Parameters": {
		"KeyNameParam": {
			"Description": "The name of the private key to be used to access the server.",
			"Type": "AWS::EC2::KeyPair::KeyName"
		},
		"VPCSubnetsParam": {
			"Description": "The ID of a Public subnet from the selected VPC.",
			"Type": "AWS::EC2::Subnet::Id"
		},
		"VPCParam": {
			"Description": "The VPC ID where the EC2 Instance should be deployed in to.",
			"Type": "AWS::EC2::VPC::Id"
		}
	},
	"Mappings": {
		"OSIDs": {
			"eu-west-2": {
				"64": "ami-0d8e27447ec2c8410"
			},
			"ca-central-1": {
				"64": "ami-0d4ae09ec9361d8ac"
			},
			"us-west-2": {
				"64": "ami-082b5a644766e0e6f"
			},
			"ap-east-1": {
				"64": "ami-570c7726"
			},
			"us-east-2": {
				"64": "ami-0d8f6eb4f641ef691"
			},
			"us-east-1": {
				"64": "ami-0b898040803850657"
			},
			"us-west-1": {
				"64": "ami-056ee704806822732"
			},
			"sa-east-1": {
				"64": "ami-058943e7d9b9cabfb"
			},
			"eu-west-3": {
				"64": "ami-0adcddd3324248c4c"
			},
			"eu-central-1": {
				"64": "ami-0cc293023f983ed53"
			},
			"eu-west-1": {
				"64": "ami-0bbc25e23a7640b9b"
			},
			"ap-northeast-2": {
				"64": "ami-095ca789e0549777d"
			},
			"ap-northeast-1": {
				"64": "ami-0c3fd0f5d33134a76"
			},
			"ap-south-1": {
				"64": "ami-0d2692b6acea72ee6"
			},
			"ap-southeast-2": {
				"64": "ami-0dc96254d5535925f"
			},
			"eu-north-1": {
				"64": "ami-3f36be41"
			},
			"ap-northeast-3": {
				"64": "ami-0ee933a7f81beb045"
			},
			"ap-southeast-1": {
				"64": "ami-01f7527546b557442"
			},
			"us-gov-west-1": {
				"64": "ami-e9a9d388"
			},
			"us-gov-east-1": {
				"64": "ami-a2d938d3"
			}
		}
	},
	"Resources": {
		"EC2Instance": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"InstanceType": "t2.nano",
				"ImageId": {
					"Fn::FindInMap": [
						"OSIDs",
						{
							"Ref": "AWS::Region"
						},
						"64"
					]
				},
				"KeyName": {
					"Ref": "KeyNameParam"
				},
				"IamInstanceProfile": {
					"Ref": "ECSInstanceProfile"
				},
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": [
							"\n",
							[
								"#!/bin/bash",
								"sudo yum -y update",
								"sudo amazon-linux-extras install postgresql10",
								"sudo amazon-linux-extras install vim",
								"echo  | base64 --decode | sudo tee /home/ec2-user/idle_shutdown_aws.sh",
								"chmod +x /home/ec2-user/idle_shutdown_aws.sh",
								{
									"Fn::Sub": "sudo /opt/aws/bin/cfn-init -v --region ${AWS::Region} --stack ${AWS::StackName} --resource EC2LaunchConfiguration"
								},
								{
									"Fn::Sub": "sudo /opt/aws/bin/cfn-signal -s true --region ${AWS::Region} --stack ${AWS::StackName} --resource EC2AutoScalingGroup"
								}
							]
						]
					}
				},
				"NetworkInterfaces": [
					{
						"AssociatePublicIpAddress": "true",
						"DeviceIndex": "0",
						"GroupSet": [
							{
								"Ref": "EC2SecurityGroup"
							}
						],
						"SubnetId": {
							"Ref": "VPCSubnetsParam"
						}
					}
				],
				"Tags": [
					{
						"Key": "Name",
						"Value": "Maintenance"
					},
					{
						"Key": "Description",
						"Value": "A Instance to perform Maintenance work in the account with auto shutdown after 30min."
					},
					{
						"Key": "Author",
						"Value": "0x4447 LLC"
					},
					{
						"Key": "Info",
						"Value": "https://0x4447.com"
					}
				]
			},
			"Metadata": {
				"AWS::CloudFormation::Init": {
					"config": {
						"packages": {
							"yum": {
								"nmap": [],
								"mc": [],
								"nano": [],
								"git": []
							}
						},
						"files": {
							"/etc/cfn/cfn-hup.conf": {
								"mode": "000644",
								"owner": "root",
								"group": "root",
								"content": {
									"Fn::Join": [
										"\n",
										[
											"[main]",
											{
												"Fn::Sub": "stack=${AWS::StackId}"
											},
											{
												"Fn::Sub": "region=${AWS::Region}"
											}
										]
									]
								}
							},
							"/etc/cfn/hooks.d/cfn-auto-reloader.conf": {
								"content": {
									"Fn::Join": [
										"\n",
										[
											"[cfn-auto-reloader-hook]",
											"triggers=post.update",
											"path=Resources.ECSLaunchConfiguration.Metadata.AWS::CloudFormation::Init",
											{
												"Fn::Sub": "action=/opt/aws/bin/cfn-init -v --region ${AWS::Region} --stack ${AWS::StackName} --resource ECSLaunchConfiguration"
											}
										]
									]
								}
							},
							"/etc/systemd/system/idle_shutdown_aws.service": {
								"content": {
									"Fn::Join": [
										"\n",
										[
											"[Unit]",
											"Description=Idle Instance Detection",
											"Documentation=https://0x4447.com",
											"After=network.target",
											"[Service]",
											"Type=simple",
											"User=root",
											"Group=root",
											"ExecStart=/home/ec2-user/idle_shutdown_aws.sh",
											"StandardOutput=syslog",
											"StandardError=syslog",
											"SyslogIdentifier=idle_shutdown_aws",
											"Restart=on-failure",
											"RestartSec=3",
											"KillMode=process",
											"ExecReload=/bin/kill -HUP $MAINPID",
											"[Install]",
											"WantedBy=multi-user.target"
										]
									]
								}
							}
						},
						"services": {
							"sysvinit": {
								"cfn-hup": {
									"enabled": true,
									"ensureRunning": true,
									"files": [
										"/etc/cfn/cfn-hup.conf",
										"/etc/cfn/hooks.d/cfn-auto-reloader.conf"
									]
								},
								"idle_shutdown_aws": {
									"enabled": true,
									"ensureRunning": true
								}
							}
						}
					}
				}
			}
		},
		"ECSInstanceProfile": {
			"Type": "AWS::IAM::InstanceProfile",
			"Properties": {
				"Path": "/",
				"Roles": [
					{
						"Ref": "EC2Role"
					}
				]
			}
		},
		"EC2Role": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"RoleName": "maintenance",
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": "ec2.amazonaws.com"
							},
							"Action": "sts:AssumeRole"
						}
					]
				}
			}
		},
		"EC2SecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupDescription": "SSH Access.",
				"GroupName": "Maintenance",
				"VpcId": {
					"Ref": "VPCParam"
				},
				"SecurityGroupEgress": [
					{
						"IpProtocol": "-1",
						"FromPort": -1,
						"ToPort": -1,
						"CidrIp": "0.0.0.0/0"
					}
				],
				"SecurityGroupIngress": [
					{
						"IpProtocol": "tcp",
						"FromPort": 22,
						"ToPort": 22,
						"CidrIp": "0.0.0.0/0"
					}
				],
				"Tags": [
					{
						"Key": "Name",
						"Value": "Maintenance"
					},
					{
						"Key": "Author",
						"Value": "0x4447 LLC"
					},
					{
						"Key": "Info",
						"Value": "https://0x4447.com"
					}
				]
			}
		},
		"EC2PolicySSM": {
			"Type": "AWS::IAM::Policy",
			"Properties": {
				"PolicyName": "SSM",
				"Roles": [
					{
						"Ref": "EC2Role"
					}
				],
				"PolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Action": [
								"ssm:UpdateInstanceInformation",
								"ssm:ListInstanceAssociations"
							],
							"Resource": {
								"Fn::Sub": "arn:aws:ec2:${AWS::Region}:${AWS::AccountId}:instance/*"
							}
						}
					]
				}
			}
		}
	}
}